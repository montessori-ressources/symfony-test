{% extends 'base.html.twig' %}

{% block body %}
<section class="section">
  <div class="container">
    <h1 class="title">My Nomenclatures</h1>
    <ul>
      {% for nomenclature in nomenclatures %}
        <li>            
          <a href="{{path('card_download', {'id': nomenclature.id})}}">{{nomenclature.name}}</a> 
          <a href="{{ path('nomenclature_edit', {'id': nomenclature.id}) }}"><i class="far fa-edit"></i></a>
        </li>
      {% endfor %}
    </ul>
  </div>
</section>
{% endblock %}
